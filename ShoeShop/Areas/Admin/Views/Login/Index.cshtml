            <div class="form-group">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName", @autofocus = "autofocus" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(model => model.RememberMe) <i>Ghi nhớ tài khoản</i><br />
                </label>
            </div>
                        <!-- Change this to a button or input when using this as a form -->
            @*<button type="submit" class="btn btn-lg btn-success btn-block">Login</button>*@
            <br />
            <input type="submit" name="login" class="login login-submit" value="Đăng nhập">
            <div class="login-help">

                <a href="/">Trang chủ</a>
            </div>


            @*</fieldset>*@
        }

